/* pages/coderList/coderList.wxss */
page{
  background: #f4f4f4;
  font-size: 28rpx;
  color: #3F3c34;
}
.listBox{
  width: 100%;
  height: auto;
  background: #fff;
  margin-top: 20rpx;
}
.listTop{
  font-size: 36rpx;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.more{
  width: 20rpx;
  height: 20rpx;
  border-top: 5rpx solid #ccc;
  border-right: 5rpx solid #ccc;
  transform: rotate(45deg);
}
.listCenter{
  padding: 0 30rpx;
  color: gray;
}
.listDown{
  padding: 10rpx 30rpx;
  display: flex;
  justify-content: space-between;
}
.text1{
  font-size: 36rpx;
}
.left image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: block;
}
.listDown .right{
  color: red;
  font-size: 40rpx;
  box-sizing: border-box;
}